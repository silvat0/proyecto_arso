type Opinion {
	id: String!
	recurso: String!
	valoraciones: [Valoracion]!
}

type Valoracion {
	correo: String!
	fecha: String! # formato yyyy/MM/dd
	calificacion: Float!
	comentario: String
}

input OpinionInput {
	id: String!
	recurso: String!
	valoraciones: [Valoracion]!

}


type Query {
	getOpinion(idOpinion: String!): Opinion!
}




type Mutation {
	
}

schema {
  query: Query
  mutation: Mutation
}